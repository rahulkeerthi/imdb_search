<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8 mt-3">
      <%= form_tag movies_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a movie"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
      <div id="movies">
        <% @results.each do |result| %>
          <h4><%= result.title %></h4>
          <p><%= result.syllabus %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
